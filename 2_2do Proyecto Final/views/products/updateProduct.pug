html
    head 
        title 1era entrega del Proyecto Final
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        link(rel="stylesheet" href="../../../css/updateProduct/updateProduct.css")
    body(class="container")
        h1 Actualizar videojuego
        |
        div(class="boxForm")
            form(onsubmit="return btnUpdate()")
                |
                input(type="hidden" id="id" value=`${product.id}`)
                input(type="text" id="name" placeholder="Nombre" class="mt-3 form-control form" value=`${product.name}`)
                input(type="text" id="description" placeholder="Descripción" class="mt-3 form-control form" value=`${product.description}`)
                input(type="text" id="code" placeholder="Código" class="mt-3 form-control form" value=`${product.code}`)
                input(type="text" id="urlPicture" placeholder="Ruta de Imagen" class="mt-3 form-control form" value=`${product.urlPicture}`)
                input(type="text" id="price" placeholder="Precio" class="mt-3 form-control form" value=`${product.price}`)
                input(type="text" id="stock" placeholder="Cantidad" class="mt-3 form-control form" value=`${product.stock}`)
                |
                input(class="mt-3 btn btn-dark form-control button" type="submit" value="Modificar")
        |
        script(src="../../../js/updateProduct.js")