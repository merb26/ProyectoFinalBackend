html
    head 
        title 1era entrega del Proyecto Final
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        link(rel="stylesheet" href="../../../css/listProducts/listProducts.css")
    body(class="container")
        h1 Carrito
        |
        div(class="boxListProducts")
            each product in products
                div(class="card product")
                    div(class="card-body title")
                        h4(class="card-title")=product.name
                        h4(class="card-title")="$" + product.price
                        input(type="text" id="id" value=product.id hidden)
                    img(src=`${product.urlPicture}` alt="..." class="card-img-top")
                    |
                    div(class="card-body")
                        p(class="card-text")=product.description
                        input(class="m-2 btn btn-dark form-control buttonAdministrator" onclick=`return btnRemove(this,${product.id})` type="button" value="Eliminar")

        |
        div(class="buttons")
            form(action="../../../" method="get")
                |
                input(class="m-4 p-2 btn btn-dark form-control button" type="submit" value="Inicio")
        |
        script(src="../../../js/productsSelects.js") 
