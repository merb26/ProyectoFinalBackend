html
    head 
        title WebSocket
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        link(rel="stylesheet" href="./style.css")
        script(src="/socket.io/socket.io.js") 
    body
        h1(class="text-info text-center bg-primary p-4") Chat
        |
        |
        div(class="frameFormChat m-5")
            form(onsubmit="return addText(this)" class="formChat")
                |
                input(class="form-control w-50" type="email" id="email" placeholder="Correo@electronico.com")
                |
                div(class="m-5" id="messages")
                |
                input(class="w-50 form-control" type="text" id="text" placeholder="Texto")
                input(class="btn btn-outline-primary m-3" type="submit" value="Enviar mensaje")
        |
        |
        |
        script(src="../../apis/messages.js") 
