html
    head 
        title WebSocket
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        link(rel="stylesheet" href="./style.css")
        script(src="/socket.io/socket.io.js") 
    body
        h1(class="text-info text-center bg-primary p-4") Mensajes por email
        |
        |
        div(class="frameFormChat m-5")
            |
            each message in messages
                div(class="row")
                    div(class="col d-flex flex-row justify-content-end")
                        strong(class="text-primary")=`${message.email}`
                        div(class="message text-danger")=`${message.dateAndHour}`
                    div(class="col text-start text-success")
                        em=`${message.bodyMessage}`