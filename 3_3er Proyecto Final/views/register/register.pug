html
    head 
        title Merb Coder
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        link(rel="stylesheet" href="./css/register/register.css")
    body
        h2(class="text-center p-4 titulo") Registro
        br
        br
        div(class="frameForm")
            form(method="POST" action="/register" class="text-center form" enctype="multipart/form-data")
                |
                input(type="email" name="username" placeholder="Correo electrónico" class="form-control" required)
                input(type="password" name="password" placeholder="Contraseña" class="mt-3 form-control" required)
                input(type="text" name="name" placeholder="Nombre" class="mt-3 form-control" required)
                input(type="text" name="address" placeholder="Dirección" class="mt-3 form-control" required)
                select( name="prefijo" id="prefijo" class="mt-3 form-control")
                    each prefixe in prefixes
                        option(value=`${prefixe.prefixe}`)=prefixe.country + ": +" + prefixe.prefixe
                input(id="phone" type="tel" name="phone" placeholder="Teléfono" class="mt-3 form-control" required)
                span Avatar
                input(accept=".png, .jpg, .jpeg" filename='file' type="file" name="file" id="file" class="mt-3 form-control" required)
                |
                input(type="submit" value="Registrarme" class="mt-3 btn btn-outline-warning boton")
        |
        div(class="d-flex justify-content-center mt-5")
            form(method="GET" action="/")
                input(type="submit" value="Iniciar sesión" class="mt-3 btn btn-outline-warning boton")
    script(src="./apis/formatPhone.js") 